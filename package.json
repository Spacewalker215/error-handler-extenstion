{
  "name": "friendly-error-handler",
  "displayName": "Friendly Error Handler",
  "description": "Provides friendly explanations for coding errors using OpenAI's GPT",
  "version": "0.0.1",
  "publisher": "Jayden Ruddock",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleErrorHandler",
        "title": "Toggle Friendly Error Handler"
      },
      {
        "command": "extension.runCodeWithErrorHandler",
        "title": "Run Code with Friendly Error Handler"
      }
    ],
    "keybindings": [
      {
        "command": "extension.runCodeWithErrorHandler",
        "key": "ctrl+alt+x",
        "mac": "cmd+alt+x",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Friendly Error Handler",
      "properties": {
        "friendlyErrorHandler.enableOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Enable the Friendly Error Handler on VS Code startup"
        },
        "friendlyErrorHandler.showWarning": {
          "type": "boolean",
          "default": true,
          "description": "Show a warning about potential API usage costs on startup"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "dependencies": {
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}